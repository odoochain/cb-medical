<odoo>
    <record model="ir.ui.view" id="wizard_create_medication_form_view">
        <field
            name="name"
        >wizard.create.medication.form (in cb_medical_medication_cima)</field>
        <field name="model">wizard.create.medication</field>
        <field name="arch" type="xml">
            <form string="Wizard Create Medication">
                <group>
                    <field name="register_number" />
                </group>
                <footer>
                    <button
                        name="create_medication"
                        string="Create"
                        class="btn-primary"
                        type="object"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="wizard_create_medication_act_window">
        <field name="name">Create Medication</field>
        <field name="res_model">wizard.create.medication</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
    <menuitem
        id="wizard_create_medication"
        name="Create Medication"
        parent="medical_base.medical_root_medications"
        groups="medical_medication.group_medical_medication_list"
        sequence="25"
        action="wizard_create_medication_act_window"
    />
</odoo>
